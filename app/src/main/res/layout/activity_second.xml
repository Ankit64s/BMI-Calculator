<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#D6F0BB"
    android:layout_height="match_parent"
    tools:context=".second">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="BMI Calculator"
        android:textColor="#CC48E4"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:id="@+id/tit"/>

    <TextView
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:text="Enter Your Weight (Kg)"
        android:textSize="22dp"
        android:textColor="#E6931A"
        android:layout_below="@id/tit"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/weight"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/weight"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="10dp"
        android:textSize="22dp"
        android:background="#FAF8F8"
        android:textAlignment="center"
        android:id="@+id/wet"/>
    <TextView
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="#E6931A"
        android:text="Enter Your Height (m)"
        android:textSize="22dp"
        android:layout_below="@id/weight"
        android:layout_marginTop="30dp"
        android:id="@+id/height"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/height"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="10dp"
        android:background="#FAF8F8"
        android:textSize="22dp"
        android:textAlignment="center"
        android:id="@+id/het"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Calculate My BMI"
        android:textSize="24dp"
        android:textColor="#9C27B0"
        android:layout_below="@id/height"
        android:layout_centerInParent="true"
        android:layout_marginTop="26dp"
        android:id="@+id/button1"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1"
        android:layout_marginTop="60dp"
        android:text="Your BMI: "
        android:textColor="#E6931A"
        android:textSize="22dp"
        android:textStyle="italic"
        android:layout_marginLeft="30dp"
        android:id="@+id/tut"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tut"
        android:layout_marginTop="320dp"
        android:textSize="22dp"
        android:text="Result Area"
        android:background="#FAF8F8"
        android:textStyle="italic"
        android:textColor="#F02C6F"
        android:textAlignment="center"
        android:layout_marginLeft="5dp"
        android:id="@+id/set"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_below="@id/tut"
        android:textAlignment="center"
        android:background="#FAF8F8"
        android:layout_marginTop="40dp"
        android:layout_centerInParent="true"
        android:textColor="#E6931A"
        android:text="Your BMI Category Appear here"
        android:textSize="22dp"
        android:textStyle="italic"
        android:layout_marginLeft="50dp"
        android:id="@+id/cat"/>

</RelativeLayout>